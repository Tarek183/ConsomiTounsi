@model ConsomiTounsi.web.ViewModel.PostComment
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="This is social network html5 template available in themeforest......" />
    <meta name="keywords" content="Social Network, Social Media, Make Friends, Newsfeed, Profile Page" />
    <meta name="robots" content="index, follow" />

    <!-- Stylesheets
    ================================================= -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="~/Scripts/rating/jquery.min.js"></script>
    <script src="~/Scripts/rating/star-rating.js"></script>
    <link href="~/CSS/rating/star-rating.css" rel="stylesheet" type="text/css" />
    <!--Google Webfont-->
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,100,100italic,200,200italic,300,300italic,400italic,500,500italic,600,600italic,700' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Favicon-->
    <link rel="shortcut icon" type="image/png" href="images/fav.png" />
</head>
<body>
    <div id="page-contents">
        <div class="container">
            <div class="row">
                <!-- Newsfeed Common Side Bar Left
                ================================================= -->
                <div class="col-md-3 static">
                    <div class="profile-card">
                        @*@{string path = "~/Content/Uploads/" + @ViewBag.image, @class="profile-photo";}
                            <img src="@Url.Content(path)" width="50" height="50" />*@
                        <img src="~/images/user-12.jpg" alt="" class="profile-photo-md" />
                        @*<img src="~/images/user-12.jpg" alt="user" class="profile-photo" />*@
                        @*@Html.DisplayFor(modelItem => item.Phone)*@
                        <h5><a href="timeline.html" class="text-white">@ViewBag.Username</a></h5>
                        <a href="#" class="text-white">@ViewBag.Role</a>
                    </div><!--profile card ends-->
                    <ul class="nav-news-feed">
                        <li><i class="material-icons">&#xe618;</i><div>@Html.ActionLink("Your posts", "Index", "Post")</div></li>
                        <li><i class="material-icons">&#xe618;</i><div>@Html.ActionLink("All posts", "Create", "Post")</div></li>
                        @*<li><i class="icon ion-ios-people-outline"></i><div><a href="newsfeed-friends.html">Friends</a></div></li>
                            <li><i class="icon ion-chatboxes"></i><div><a href="newsfeed-messages.html">Messages</a></div></li>*@

                    </ul><!--news-feed links ends-->
                    <div id="chat-block">
                        <div class="title">Chat online</div>
                        <ul class="online-users list-inline">
                            <li><a href="newsfeed-messages.html" title="Linda Lohan"><img src="~/images/user-12.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="Sophia Lee"><img src="~/images/user-13.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="John Doe"><img src="~/images/user-17.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="Alexis Clark"><img src="~/images/user-20.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="James Carter"><img src="~/images/user-4.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="Robert Cook"><img src="~/images/user-6.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="James Carter"><img src="~/images/user-4.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="Robert Cook"><img src="~/images/user-6.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="James Carter"><img src="~/images/user-4.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="Robert Cook"><img src="~/images/user-6.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="James Carter"><img src="~/images/user-4.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                            <li><a href="newsfeed-messages.html" title="Robert Cook"><img src="~/images/user-6.jpg" alt="user" class="img-responsive profile-photo" /><span class="online-dot"></span></a></li>
                        </ul>
                    </div><!--chat block ends-->
                </div>
                <div class="col-md-7">

                    <!-- Post Create Box
                    ================================================= -->
                    @using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="create-post">
                            <div class="row">
                                <div class="col-md-7 col-sm-7">
                                    <div class="form-group" style="height:64px">
                                        <img src="~/images/user-12.jpg" alt="" class="profile-photo-md" />
                                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @placeholder = "Write what you wish", @rows = "1", id = "exampleTextarea", cols = "30" })
                                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-5 col-sm-5">
                                    <div class="tools">
                                        <ul class="publishing-tools list-inline">
                                            <li>
                                                <button type="submit" style="margin-right:35px" class="btn btn-primary pull-right">Publish</button>
                                                <label class="control-label form-control-sm">Image</label>
                                                @*@Html.LabelFor(model => model.UrlImage, htmlAttributes: new { @class = "control-label form-control-sm" })*@
                                                @Html.TextBox("file", "", new { type = "file" })
                                                @Html.ValidationMessageFor(model => model.UrlImage, "", new { @class = "text-danger" })
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Post Create Box End-->
                    <!-- Post Content
                    ================================================= -->
                    @foreach (var item in Model.Posts)
                    {
                        <div class="post-content">
                            @{ string path = "~/Content/uploads/" + @item.UrlImage;}
                            <img src="@Url.Content(path)" alt="post-image" class="img-responsive post-image" />
                            <div class="post-container">
                                <img src="~/images/user-12.jpg" alt="user" class="profile-photo-md pull-left" />
                                <div class="post-detail">
                                    <div class="user-info">
                                        <a href="timeline.html" class="profile-link">@ViewBag.Username</a>
                                        <!-- Bootstrap Modal Dialog For update post-->
                                        @*******************************************************************@
                                        <b>
                                            <a data-target="#UpdateModal_@item.PostId" data-toggle="modal" class="MainNavText" id="MainNavHelp"
                                               href="#UpdateModal"><span class="following" style="margin-left:350px">Edit</span></a>
                                        </b>
                                        <div class="modal fade" id="UpdateModal_@item.PostId" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <asp:UpdatePanel ID="upModal" runat="server" ChildrenAsTriggers="false" UpdateMode="Conditional">
                                                    <ContentTemplate>
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                <h4 class="modal-title"><asp:Label ID="lblModalTitle" runat="server" Text=""></asp:Label></h4>
                                                                <h2>Update your post...</h2>
                                                            </div>
                                                            <div class="modal-body">
                                                                <textarea name="texts" id="exampleTextarea" cols="200" rows="2" class="form-control">@item.Content</textarea>
                                                                <label class="label">Image</label>
                                                                @Html.TextBox("file", "", new { type = "file", @class = "input--style-4", style = "width:800px" })
                                                                @Html.ValidationMessageFor(model => model.UrlImage, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="btn btn-success"> @Html.ActionLink("Update", "Edit", new { id = item.PostId })</button>
                                                                <button class="btn btn-info" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                                            </div>
                                                        </div>
                                                    </ContentTemplate>
                                                </asp:UpdatePanel>
                                            </div>
                                        </div>
                                        @*******************************************************************@

                                        <!-- Bootstrap Modal Dialog For Delete post-->
                                        @*******************************************************************@
                                        <b>
                                            <a data-target="#DeleteModal_@item.PostId" data-toggle="modal" class="MainNavText" id="MainNavHel">
                                                <span class="following" style="color:red">Delete</span>
                                            </a>
                                        </b>

                                        <div class="modal fade" id="DeleteModal_@item.PostId" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <asp:UpdatePanel ID="upModal" runat="server" ChildrenAsTriggers="false" UpdateMode="Conditional">
                                                    <ContentTemplate>
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                <h4 class="modal-title"><asp:Label ID="lblModalTitle" runat="server" Text=""></asp:Label></h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <asp:Label ID="lblModalBody" runat="server" Text=""></asp:Label>
                                                                <h4>Are you sure you want to delete this post ?</h4>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="btn btn-danger"> @Html.ActionLink("Confirm", "Delete", new { id = item.PostId })</button>
                                                                <button class="btn btn-info" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                                            </div>
                                                        </div>
                                                    </ContentTemplate>
                                                </asp:UpdatePanel>
                                            </div>
                                        </div>
                                        @*******************************************************************@
                                        <p class="text-muted">Published @Convert.ToDateTime(item.PublishDate).ToString("dddd, dd MMM yyyy")</p>
                                    </div>
                                    <div class="reaction">
                                        @*@Html.ActionLink("Like", "Like", new { id = item.PostId }) @item.Like*@
                                        @*@Html.ActionLink("DisLike", "DisLike", new { id = item.PostId }) @item.Dislike*@

                                    </div>
                                    <div class="line-divider"></div>
                                    <div class="post-text">
                                        <p>@item.Content  <i class="em em-anguished"></i> <i class="em em-anguished"></i> <i class="em em-anguished"></i></p>
                                    </div>
                                    <div class="line-divider"></div>
                                    @foreach (var c in Model.Comments)
                                    {
                                        if (item.PostId == c.PostId)
                                        {
                                <div class="post-comment">
                                    <img src="~/images/user-12.jpg" alt="" class="profile-photo-sm" />
                                    <p><a href="timeline.html" class="profile-link">John</a><br />@c.ContentComment </p>
                                    <script>
                                        $(function () {
                                            $('[data-toggle="popover"]').popover({
                                                html: true,
                                                content: function () {
                                                    return $('#popover-content').html();
                                                }
                                            })
                                        })
                                    </script>
                                    <div class="container" style="margin-left:300px">
                                        <a data-toggle="popover" title="Update or Delete this" data-placement="top" style="font-size:30px">...</a>
                                        <div id="popover-content" style="display:none;">
                                            <ul>
                                                <li>
                                                    <b>
                                                        <a data-target="#UpdateModalC_@c.CommentId" data-toggle="modal" class="MainNavText" id="MainNavHelp"
                                                           href="#UpdateModal">
                                                            <span class="following">Edit</span>
                                                        </a>
                                                    </b>
                                                </li>
                                                <li>
                                                    <b>
                                                        <a data-target="#DeleteModal_@c.CommentId" data-toggle="modal" class="MainNavText" id="MainNavHel">
                                                            <span class="following" style="color:red">Delete</span>
                                                        </a>
                                                    </b>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <!-- Bootstrap Modal Dialog For update comment-->
                                    @*******************************************************************@
                                    <div class="modal fade" id="UpdateModalC_@c.CommentId" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <asp:UpdatePanel ID="upModal" runat="server" ChildrenAsTriggers="false" UpdateMode="Conditional">
                                                <ContentTemplate>
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            <h4 class="modal-title"><asp:Label ID="lblModalTitle" runat="server" Text=""></asp:Label></h4>
                                                            <h2>Update your post...</h2>
                                                        </div>
                                                        <div class="modal-body">
                                                            <textarea name="texts" id="exampleTextarea" cols="200" rows="2" class="form-control">@c.ContentComment</textarea>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-success"> @Html.ActionLink("Update", "EditComment", new { id = c.CommentId })</button>
                                                            <button class="btn btn-info" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                                        </div>
                                                    </div>
                                                </ContentTemplate>
                                            </asp:UpdatePanel>
                                        </div>
                                    </div>
                                    @*******************************************************************@
                                    <!-- Bootstrap Modal Dialog For Delete comemnt-->
                                    @*******************************************************************@


                                    <div class="modal fade" id="DeleteModal_@c.CommentId" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <asp:UpdatePanel ID="upModal" runat="server" ChildrenAsTriggers="false" UpdateMode="Conditional">
                                                <ContentTemplate>
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            <h4 class="modal-title"><asp:Label ID="lblModalTitle" runat="server" Text=""></asp:Label></h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <asp:Label ID="lblModalBody" runat="server" Text=""></asp:Label>
                                                            <h4>Are you sure you want to delete this post ?</h4>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-danger"> @Html.ActionLink("Confirm", "DeleteComment", new { id = c.CommentId })</button>
                                                            <button class="btn btn-info" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                                        </div>
                                                    </div>
                                                </ContentTemplate>
                                            </asp:UpdatePanel>
                                        </div>
                                    </div>
                                    @*******************************************************************@
                                </div>
                                            <a class="btn text-green"><i class="glyphicon glyphicon-thumbs-up" style="color:green; margin-left:50px"></i></a>
                                            <a class="btn text-red"><i class="glyphicon glyphicon-thumbs-down" style="color:red"></i></a> <p style="margin-left:200px">@Convert.ToDateTime(c.CommentDate).ToString("dddd, dd MMM yyyy")</p>
                                        }
                                    }
                                    @using (Html.BeginForm("CreateComment", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="post-comment">
                                            @*<input type="text" class="form-control" placeholder="Post a comment">*@
                                            @Html.EditorFor(model => model.ContentComment, new { htmlAttributes = new { @class = "form-control", @placeholder = "Post a comment" } })
                                            @Html.ValidationMessageFor(model => model.ContentComment, "", new { @class = "text-danger" })
                                            @*@Html.EditorFor(model => model.PostId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Post a comment" } })*@

                                        </div>
                                        @*<a type="submit"  href="#" class="badge badge-light" style="margin-left:240px">Post</a>*@
                                        <button type="submit" class="badge badge-light" style="margin-left:240px">Post</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>



