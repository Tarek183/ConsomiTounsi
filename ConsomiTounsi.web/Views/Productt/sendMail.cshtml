@model ConsomiTounsi.web.Models.ProductM

@{
    ViewBag.Title = "sendMail";
}

<h2>sendMail</h2>
@using (Html.BeginForm("sendMail", "Productt", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    <form method="get">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">The product:</label>

            <div class="col-sm-10">
                @Html.EditorFor(model => model.Nom)
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">fournisseur:</label>

            <div class="col-sm-10">
                @Html.EditorFor(model => model.marque)
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Quantity:</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.qte, new { @rows = 10, @cols = 10 })
            </div>
        </div>
        <div class="mail-body text-right tooltip-demo"><button type="submit" class="btn btn-sm btn-primary">Envoyer</button></div>
    </form>






}


