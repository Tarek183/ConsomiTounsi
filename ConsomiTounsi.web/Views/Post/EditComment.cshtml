@model ConsomiTounsi.domain.Entities.Comment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="This is social network html5 template available in themeforest......" />
    <meta name="keywords" content="Social Network, Social Media, Make Friends, Newsfeed, Profile Page" />
    <meta name="robots" content="index, follow" />
    <title>About Me | Learn Detail About Me</title>

    <!--Google Webfont-->
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,100,100italic,200,200italic,300,300italic,400italic,500,500italic,600,600italic,700' rel='stylesheet' type='text/css'>

    @Styles.Render("~/CSS/formUser/font-awesome.min.css")
    @Styles.Render("~/CSS/formUser/main.css")
    @Styles.Render("~/CSS/formUser/material-design-iconic-font.min.css")

    <!--Favicon-->
    <link rel="shortcut icon" type="image/png" href="images/fav.png" />
</head>
<body>
    <div class="container">

        <!-- Timeline
        ================================================= -->
        <div class="timeline">
            <div class="timeline-cover">

                <!--Timeline Menu for Large Screens-->
                <div class="timeline-nav-bar hidden-sm hidden-xs">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="profile-info">
                                <img src="~/images/image.jpg" alt="" class="img-responsive profile-photo" />
                                <h3>@ViewBag.UserName</h3>
                                <p class="text-muted">@ViewBag.Role</p>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <ul class="list-inline profile-menu">
                                <li>@Html.ActionLink("Chat", "Index", "Post")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </div>
                </div><!--Timeline Menu for Large Screens End-->
                <!--Timeline Menu for Small Screens-->
            </div>

            <div style="padding:20px; margin:100px">
                <div class="wrapper wrapper--w680">
                    <div class="card card-4" style="width:1000px; margin-left:-155px">
                        <div class="card-body" style="margin-left:100px">
                            <h2 class="title">Update your comment!</h2>
                            @using (Html.BeginForm("EditComment", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.CommentId)

                                    <form>
                                        <div class="row row-space">
                                            <div class="col-2">
                                                <div class="input-group">
                                                    <label class="label">Content</label>
                                                    @Html.TextAreaFor(model => model.ContentComment, new { @class = "input--style-4", style = "width:800px" })
                                                    @*<label class="label">Image</label>*@
                                                    @*@Html.TextBox("file", "", new { type = "file", @class = "input--style-4", style = "width:800px" })*@
                                                    @Html.ValidationMessageFor(model => model.ContentComment, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn btn--radius-2 btn--green" style="margin-left:65px; width:280px">Save</button>
                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--preloader-->
    <div id="spinner-wrapper">
        <div class="spinner"></div>
    </div>

    <!-- Scripts
    ================================================= -->
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDOiLRLzx9Jd2ivpqH_VOMDzzXnI2O-WmA=initMap"></script>
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.sticky-kit.min.js"></script>
    <script src="js/jquery.scrollbar.min.js"></script>
    <script src="js/script.js"></script>

</body>
</html>
